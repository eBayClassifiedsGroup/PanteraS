        <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
        <script>

            function ifUrlIsAvailable(name, url, endpoint, callback) {
                var $iframe = $('<iframe src="' + url + '" style="display:none"></iframe>');
                var img = new Image();
                img.onload = function(){
                 if (img.width>0) {
                  try{
                    $("body").append($iframe);
                    $iframe.load(callback);
                    document.getElementById(name+'_p').src = url + endpoint;
                  }
                  catch(err) {
                    console.log(err.message);
                  }
                 };
                };
                try{
                  img.src = url + endpoint;
                }
                catch(err) {
                  console.log(err.message);
                }
                window.setTimeout(function () {
                    $iframe.remove();
                }, 5000);
            }

            var links = [
                {
                    id: 'marathon',
                    port: 8080,
                    endpoint: '/ui/img/marathon-favicon.ico'
                },
                {
                    id: 'consul',
                    port: 8500,
                    endpoint: '/ui/assets/favicon-32x32-646753a205c6a6db7f93d0d1ba30bd93.png'
                },
                {
                    id: 'supervisord',
                    port: 9000,
                    endpoint: '/images/supervisor.gif'
                },
                {
                    id: 'fabio',
                    port: 81,
                    endpoint: '/logo.svg'
                },
                {
                    id: 'mesos',
                    port: 5050,
                    endpoint: '/assets/img/mesos-logo.png'
                },
                {
                    id: 'netdata',
                    port: 19999,
                    endpoint: '/images/netdata-logomark.svg'
                },
            ];

            links.forEach(function (link) {
                var url = window.location.origin + ':' + link.port;
                ifUrlIsAvailable(link.id, url, link.endpoint, function () {
                    var $col = $("#" + link.id);
                    $col.removeClass("hidden");
                    $col.find("a").attr("href", url);
                });
            });

        </script>
